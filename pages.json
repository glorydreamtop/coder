{
	"pages": [
		//pages数组中第一项表示应用启动页
		{
			"path": "pages/juejin/juejin",
			"style": {
				"disableScroll": true,
				"app-plus": {
					"bounce": "none",
					"titleNView": {
						"type": "default",
						"searchInput": {
							"placeholder": "快速搜索文章、用户",
							"borderRadius": "20px",
							"disabled":true,
							"backgroundColor": "rgba(255,255,255)"
						},
						"buttons": [{
							"fontSrc": "/static/coderfont.ttf",
							"text": "\ue706",
							"fontSize": "24px",
							"color": "#FFFFFF"
						}]
					}
				},
				"navigationBarTitleText": "掘金"
			}
		},
		{
			"path": "pages/discover/discover",
			"style": {
				"navigationStyle": "custom",
				"transparentTitle": "always",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/users/users",
			"style": {
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/juejinSearch/juejinSearch",
			"style": {
				"app-plus": {
					"bounce": "none",
					"titleNView": {
						"type": "default",
						"searchInput": {
							"placeholder": "快速搜索文章、用户",
							"borderRadius": "20px",
							"backgroundColor": "rgba(255,255,255)",
							"autoFocus": true
						}
					}
				}
			}
		},
		{
			"path": "pages/juejinArticle/juejinArticle",
			"style": {
				"app-plus": {
					"titleNView": {
						"buttons": [{
							"fontSrc": "/static/coderfont.ttf",
							"text": "\ue695",
							"fontSize": "20px",
							"color": "#FFFFFF"
						}, {
							"type": "favorite"
						}]
					}
				}
			}
		}
	    ,{
            "path" : "pages/juejinList/juejinList",
            "style" : {}
        }
    ],
	"tabBar": {
		"iconWidth":"30px",
		"backgroundColor": "#FFF",
		"list": [{
			"pagePath": "pages/juejin/juejin",
			"iconPath": "static/tabbar/juejin.png",
			"selectedIconPath": "static/tabbar/juejin_cur.png"
		}, {
			"pagePath": "pages/discover/discover",
			"iconPath": "static/tabbar/discover.png",
			"selectedIconPath": "static/tabbar/discover_cur.png"
		}, {
			"pagePath": "pages/users/users",
			"iconPath": "static/tabbar/users.png",
			"selectedIconPath": "static/tabbar/users_cur.png"
		}]
	},
	"globalStyle": {
		"navigationBarBackgroundColor": "#282C35",
		"navigationBarTitleText": "Coder",
		"navigationStyle": "default",
		"navigationBarTextStyle": "white"
	},
	"usingComponts": true

}
