{
	"pages": [
		//pages数组中第一项表示应用启动页
		{
			"path": "pages/girls/girls",
			"style": {
				"disableScroll": true,
				"navigationStyle":"custom",
				"transparentTitle":"always",
				"app-plus": {
					"bounce": "none"
				}
			}
		},
		{
			"path": "pages/juejin/juejin",
			"style": {
				"disableScroll": true,
				"app-plus": {
					"bounce": "none",
					"titleNView":{
						"searchInput":{
							"placeholder":"快速搜索文章、用户、标签",
							"borderRadius":"20px",
							"backgroundColor":"rgba(255,255,255)"
						},
						"buttons":[
							{
								"fontSrc":"/static/coderfont.tff",
								"text":"\ue706",
								"fontSize":"28px",
								"color":"#FFFFFF"
							}
						]
					}
				},
				"navigationBarTitleText": "掘金"
			}
		},
		{
			"path": "pages/users/users",
			"style": {
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/juejinArticle/juejinArticle",
			"style": {
				"app-plus": {
					"titleNView": {
						"buttons": [{
							"type": "share"
						}, {
							"type": "favorite"
						}]
					}
				}
			}
		}
	],
	"tabBar": {
		"backgroundColor": "#FFF",
		"list": [{
			"pagePath": "pages/juejin/juejin",
			"iconPath": "static/tabbar/juejin.png",
			"selectedIconPath": "static/tabbar/juejin_cur.png"
		}, {
			"pagePath": "pages/girls/girls",
			"iconPath": "static/tabbar/girls.png",
			"selectedIconPath": "static/tabbar/girls_cur.png"
		}, {
			"pagePath": "pages/users/users",
			"iconPath": "static/tabbar/users.png",
			"selectedIconPath": "static/tabbar/users_cur.png"
		}]
	},
	"globalStyle": {
		"mp-alipay": {
			/* 支付宝小程序特有相关 */
			"transparentTitle": "always",
			"allowsBounceVertical": "NO"
		},
		"navigationBarBackgroundColor": "#282C35",
		"navigationBarTitleText": "Coder",
		"navigationStyle": "default",
		"navigationBarTextStyle": "white"
	},
	"usingComponts": true

}
